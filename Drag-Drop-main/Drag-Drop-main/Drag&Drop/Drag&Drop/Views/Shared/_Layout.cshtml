<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        nav img {
            display: flex;
            width: 200px;
        }

        nav ul li {
            font-weight: 400;
        }
        li{
            padding:10px;
            color: lawngreen;
            justify-content: space-around;
            justify-items: stretch
        }

        footer {
            background-color: limegreen;
            border: 3px solid black;
            display: flex;
            justify-content: space-evenly;
            padding: 8px 16px;
            position: absolute;
            top: 100%;
            flex-wrap: wrap;
            border-top-left-radius: 1%;
            border-top-right-radius: 1%;
            width: 100%;
        }

        .footer-info {
            width: 25%;
        }

        .footer-info-title {
            font-family: cursive;
            font-size: 28px;
            color: white;
            -webkit-text-stroke: 1.5px black;
        }

        .socials-icons {
            padding: 10px;
        }

        .socials-text {
            padding: 10px;
            font-size: 20px;
            display: flex;
            align-items: center;
        }

        .socials a {
            color: white;
            text-decoration: none;
        }

        .socials-title {
            display: flex;
            flex-direction: column;
            color: white;
            text-align: center !important;
        }

        .socials {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .socials-container {
            display: flex;
            flex-direction: row;
            min-width: 250px;
            border-bottom: 1px solid black;
        }

        #contacts-width {
            max-width: 250px;
        }

        iframe {
            box-shadow: 0px 0px 10px white, 0px 0px 20px white, 0px 0px 30px white;
            border: 2px solid white;
            border-radius: 5%;
        }


    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Drag_Drop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Drag_Drop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="position: relative;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 30px;">Drag&Drop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="text-align:center; font-size: 25px;" >
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Продукти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Категории</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="TypeProducts" asp-action="Index">Видове продукти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">Поръчки</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Продукти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">Поръчки</a>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" style="font-size: 25px;" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="bottom: auto;">
        <div class="footer-info">
            <div class="socials-title">
                <span class="footer-info-title">Контакти</span>
                <div class="socials">
                    <div id="contacts-width" class="socials-container">
                        <div class="socials-icons"><img draggable="false" src="https://static.vecteezy.com/system/resources/previews/020/009/614/original/email-and-mail-icon-black-free-png.png" width="50" /></div>
                        <div class="socials-text"><span style="font-family: cursive;">dragnaddrop@gmail.com</span></div>
                    </div>
                </div>
                <div class="socials">
                    <div id="contacts-width" class="socials-container">
                        <div class="socials-icons"><img draggable="false" src="https://cdn-icons-png.flaticon.com/512/15/15407.png" width="50" /></div>
                        <div class="socials-text"><span style="font-family: cursive;">+359 183764924</span></div>
                    </div>
                </div>
                <div class="socials">
                    <div id="contacts-width" class="socials-container">
                        <div class="socials-icons"><img draggable="false" src="https://freesvg.org/img/noun-project-462.png" width="50" /></div>
                        <div class="socials-text"><span style="font-family: cursive;">ул. "Иван Вазов" 34</span></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-info">
            <div class="socials-title">
                <span class="footer-info-title">Социални мрежи</span>
                <div class="socials">
                    <div class="socials-container">
                        <div class="socials-icons"><a href="https://twitter.com"><img draggable="false" src="https://cdn-icons-png.flaticon.com/512/60/60580.png" width="50" /></div>
                        <div class="socials-text"><span style="font-family: cursive;">twitter.com</span></div></a>
                    </div>
                </div>
                <div class="socials">
                    <div class="socials-container">
                        <div class="socials-icons"><a href="https://instagram.com"><img draggable="false" src="https://cdn4.iconfinder.com/data/icons/picons-social/57/38-instagram-2-512.png" width="50" /></div>
                        <div class="socials-text"><span style="font-family: cursive;">instagram.com</span></div></a>
                    </div>
                </div>
                <div class="socials">
                    <div class="socials-container">
                        <div class="socials-icons"><a href="https://youtube.com"><img draggable="false" src="https://uxwing.com/wp-content/themes/uxwing/download/brands-and-social-media/youtube-icon.png" width="50" /></div>
                        <div class="socials-text"><span style="font-family: cursive;">youtube.com</span></div></a>
                    </div>
                </div>
                <div class="socials">
                    <div class="socials-container">
                        <div class="socials-icons"><a href="https://facebook.com"><img draggable="false" src="https://seeklogo.com/images/F/facebook-icon-black-logo-133935095E-seeklogo.com.png" width="50" /></div>
                        <div class="socials-text"><span style="font-family: cursive;">facebook.com</span></div></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-info">
            <div class="text-center">
                <span class="footer-info-title">Адрес</span>
                <div><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d872.5347325626827!2d24.788705508384748!3d42.64343912602811!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40a9977d8c795d5d%3A0x67737c525f868003!2sLilly%20Drogerie!5e0!3m2!1sbg!2sbg!4v1715758320974!5m2!1sbg!2sbg" width="400" height="250" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
