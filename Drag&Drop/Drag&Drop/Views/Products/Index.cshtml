@model IEnumerable<Drag_Drop.Data.Product>

@{
    ViewData["Title"] = "Index";
}
<style>
    thead {
        background-color: #87c6ec;
        color: black;
    }

    .order{
        display:flex;
        justify-content:center;
    }
    .order input[type=submit]{
        width:170px;
    }
    #ccount{
        width:170px;
    }
</style>
<center><h1>Лекарства</h1></center>

@if (User.IsInRole("Admin"))
{
    <center><a class="btn btn-primary" asp-action="Create">Добави продукт</a></center>

}

<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Снимка
            </th>
            <th>
                Наименование
            </th>
            <th>
                Каталожен номер
            </th>

        

            @if (User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.RegisterOn)
                </th>
            }

            <th>
                Цена
            </th>

            <th>
                Категория
            </th>
            <th>
                Вид
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID"><img src="@Html.DisplayFor(modelItem => item.PhotoURL)" width="120" /></a>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatalogNumber)
                </td>

             


                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.RegisterOn)
                    </td>
                }

                <td>
                    @Html.DisplayFor(modelItem => item.Categories.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeProducts.Name)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                }
                else
                {
                    <td class="order">
                        <form method="get" asp-controller="Orders" asp-action="CreateWithProductId" asp-route-productId="@item.ID">
                            <input name="productId" type="hidden" value="@item.ID" />
                            <input name="countP" id="ccount" type="number" width="4" value="1" style="color:black; font:bold" />
                            <br />
                            <input id="buyBtn" type="submit" value="Поръчай" class="btn btn-primary" />
                        </form>
                    </td>
                }

            </tr>
        }
    </tbody>
</table>
